<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="417.0" prefWidth="621.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="business.UIServiceRequestController">
    <children>
        <!-- Título con línea roja -->
        <StackPane layoutX="20.0" layoutY="10.0">
            <Line startX="0.0" startY="5.0" endX="200.0" endY="5.0" stroke="red" strokeWidth="2" />
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #000000;" text="Servicio de Solicitud de Alimentos" />
        </StackPane>
        
        <!-- Selección del Día de Reservación -->
        <Label layoutX="20.0" layoutY="51.0" style="-fx-text-fill: #000000;" text="Día de Reservación:" />
        <ComboBox fx:id="cbDiaReservacion" layoutX="139.0" layoutY="47.0" prefWidth="150.0" promptText="Seleccione un día" />

        <!-- Selección de Horario (Desayuno o Almuerzo) -->
        <Label layoutX="20.0" layoutY="97.0" style="-fx-text-fill: #000000;" text="Horario de la reserva:" />
        <RadioButton fx:id="rbDesayuno" layoutX="139.0" layoutY="97.0" mnemonicParsing="false" text="Desayuno">
            <toggleGroup>
                <ToggleGroup fx:id="Tipo" />
            </toggleGroup>
            <font>
                <Font name="System Bold Italic" size="12.0" />
            </font>
        </RadioButton>
        <RadioButton fx:id="rbAlmuerzo" layoutX="239.0" layoutY="97.0" mnemonicParsing="false" text="Almuerzo" toggleGroup="$Tipo">
            <font>
                <Font name="System Bold Italic" size="12.0" />
            </font>
        </RadioButton>
        
        <!-- Tabla de Platos -->
        <TableView fx:id="tableDishes" layoutX="42.0" layoutY="148.0" opacity="0.8" prefHeight="200.0" prefWidth="547.0">
            <columns>
                <TableColumn fx:id="colAlimento" prefWidth="204.0" text="Alimento" />
                <TableColumn fx:id="colPrecio" prefWidth="206.0" text="Precio" />
                <TableColumn fx:id="colSolicitar" prefWidth="136.0" text="Seleccionar" />
            </columns>
        </TableView>

        <!-- Botones -->
        <Button fx:id="bAgregarAlimento" layoutX="20.0" layoutY="366.0" onAction="#loadDishes" text="Cargar Platos" style="-fx-background-color: #C0392B; -fx-text-fill: #FFFFFF;" />
        <Button fx:id="bRegresar" layoutX="536.0" layoutY="366.0" onAction="#confirmPurchase" text="Regresar" style="-fx-background-color: #C0392B; -fx-text-fill: #FFFFFF;" />
    </children>
</AnchorPane>
